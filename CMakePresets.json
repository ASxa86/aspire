{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "binaryDir": "${sourceDir}/build/",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "environment": {
                "VCPKG_KEEP_ENV_VARS": "ANDROID_HOME;ANDROID_NDK_HOME",
                "VCPKG_FEATURE_FLAGS": "-compilertracking"
            },
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_DEBUG_POSTFIX": "d",
                "CMAKE_RELEASE_POSTFIX": "",
                "CMAKE_RELWITHDEBINFO_POSTFIX": "rd",
                "CMAKE_MINSIZEREL_POSTFIX": "s",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
            }
        },
        {
            "name": "linux",
            "inherits": "default",
            "displayName": "Linux Default",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -pedantic",
                "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic",
                "VCPKG_APPLOCAL_DEPS": "OFF"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": "linux",
            "displayName": "GCC Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "gcc-release",
            "inherits": "linux",
            "displayName": "GCC Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "clang-debug",
            "inherits": "linux",
            "displayName": "Clang Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-17",
                "CMAKE_C_COMPILER": "/usr/bin/clang-17",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "msvc",
            "inherits": "default",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "CMAKE_CXX_FLAGS": "/DWIN32 /D_WINDOWS /EHsc /MP /permissive- /W4 /WX"
            }
        },
        {
            "name": "gcc-android",
            "inherits": "linux",
            "displayName": "GCC Android",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/toolchains/android.cmake",
                "VCPKG_TARGET_TRIPLET": "arm64-android-qt",
                "VCPKG_INSTALL_OPTIONS": "--allow-unsupported",
                "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets"
            }
        },
        {
            "name": "gcc-android-debug",
            "inherits": "gcc-android",
            "displayName": "GCC Android (Debug)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "gcc-android-release",
            "inherits": "gcc-android",
            "displayName": "GCC Android (Release)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "gcc-release",
            "configurePreset": "gcc-release"
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "msvc-relwithdebinfo",
            "configurePreset": "msvc",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "gcc-android-debug",
            "configurePreset": "gcc-android-debug"
        }
    ]
}