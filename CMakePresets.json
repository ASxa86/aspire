{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "binaryDir": "${sourceDir}/build/",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_DEBUG_POSTFIX": "d",
                "CMAKE_RELEASE_POSTFIX": "r",
                "CMAKE_RELWITHDEBINFO_POSTFIX": "rd",
                "CMAKE_MINSIZEREL_POSTFIX": "s",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
                "CMAKE_AUTOMOC": "ON"
            }
        },
        {
            "name": "gcc",
            "inherits": "default",
            "displayName": "GCC Default",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic",
                "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": "gcc",
            "displayName": "GCC Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "msvc",
            "inherits": "default",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "CMAKE_CXX_FLAGS": "/MP /permissive-"
            }
        },
        {
            "name": "msvc-debug",
            "displayName": "MSVC Debug",
            "inherits": "msvc"
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc-debug",
            "configuration": "Debug"
        }
    ]
}