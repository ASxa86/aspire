{
    "version": 6,
    "configurePresets": [
        {
            "name": "use-vcpkg-ninja",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
            }
        },
        {
            "name": "default-build-dir",
            "hidden": true,
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "build-debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "build-relwithdebinfo",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "build-release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "use-clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang"
            }
        },
        {
            "name": "use-gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "use-msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_C_COMPILER": "cl"
            }
        },
        {
            "name": "use-vcpkg",
            "hidden": true,
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "use-vcpkg-triplet-x64-linux",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-linux-release",
                "VCPKG_TARGET_TRIPLET": "x64-linux-release"
            }
        },
        {
            "name": "use-vcpkg-triplet-x64-windows",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-windows-release",
                "VCPKG_TARGET_TRIPLET": "x64-windows-release"
            }
        },
        {
            "name": "use-vcpkg-triplet-arm64-osx",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "arm64-osx-release",
                "VCPKG_TARGET_TRIPLET": "arm64-osx-release"
            }
        },
        {
            "name": "use-vcpkg-triplet-x64-android",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/toolchains/android.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-android"
            }
        },
        {
            "name": "use-vcpkg-triplet-arm64-android",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/toolchains/android.cmake",
                "VCPKG_TARGET_TRIPLET": "arm64-android"
            }
        },
        {
            "name": "default-windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "default-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "default-osx",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "linux-gcc-debug",
            "inherits": [
                "use-vcpkg-ninja",
                "use-gcc",
                "default-linux",
                "default-build-dir",
                "build-debug",
                "use-vcpkg-triplet-x64-linux"
            ]
        },
        {
            "name": "linux-gcc-release",
            "inherits": [
                "use-vcpkg-ninja",
                "use-gcc",
                "default-linux",
                "default-build-dir",
                "build-release",
                "use-vcpkg-triplet-x64-linux"
            ]
        },
        {
            "name": "linux-clang-debug",
            "inherits": [
                "use-vcpkg-ninja",
                "use-clang",
                "default-linux",
                "default-build-dir",
                "build-debug",
                "use-vcpkg-triplet-x64-linux"
            ]
        },
        {
            "name": "linux-clang-release",
            "inherits": [
                "use-vcpkg-ninja",
                "use-clang",
                "default-linux",
                "default-build-dir",
                "build-release",
                "use-vcpkg-triplet-x64-linux"
            ]
        },
        {
            "name": "linux-android-debug",
            "inherits": [
                "use-vcpkg-ninja",
                "use-gcc",
                "default-linux",
                "default-build-dir",
                "build-debug",
                "use-vcpkg-triplet-x64-linux",
                "use-vcpkg-triplet-arm64-linux"
            ]
        },
        {
            "name": "linux-android-release",
            "inherits": [
                "use-vcpkg-ninja",
                "use-gcc",
                "default-linux",
                "default-build-dir",
                "build-releases",
                "use-vcpkg-triplet-x64-linux",
                "use-vcpkg-triplet-arm64-linux"
            ]
        },
        {
            "name": "windows-msvc-debug",
            "inherits": [
                "use-vcpkg-ninja",
                "use-msvc",
                "default-windows",
                "default-build-dir",
                "build-debug",
                "use-vcpkg-triplet-x64-windows"
            ]
        },
        {
            "name": "windows-msvc-relwithdebinfo",
            "inherits": [
                "use-vcpkg-ninja",
                "use-msvc",
                "default-windows",
                "default-build-dir",
                "build-relwithdebinfo",
                "use-vcpkg-triplet-x64-windows"
            ]
        },
        {
            "name": "windows-msvc-release",
            "inherits": [
                "use-vcpkg-ninja",
                "use-msvc",
                "default-windows",
                "default-build-dir",
                "build-release",
                "use-vcpkg-triplet-x64-windows"
            ]
        },
        {
            "name": "windows-msvc-android-debug",
            "inherits": [
                "use-vcpkg-ninja",
                "use-msvc",
                "default-windows",
                "default-build-dir",
                "build-debug",
                "use-vcpkg-triplet-x64-windows",
                "use-vcpkg-triplet-x64-android"
            ]
        },
        {
            "name": "windows-msvc-android-release",
            "inherits": [
                "use-vcpkg-ninja",
                "use-msvc",
                "default-windows",
                "default-build-dir",
                "build-release",
                "use-vcpkg-triplet-x64-windows",
                "use-vcpkg-triplet-x64-android"
            ]
        },
        {
            "name": "osx-debug",
            "inherits": [
                "use-vcpkg-ninja",
                "use-clang",
                "default-osx",
                "default-build-dir",
                "build-debug",
                "use-vcpkg-triplet-arm64-osx"
            ]
        },
        {
            "name": "osx-release",
            "inherits": [
                "use-vcpkg-ninja",
                "use-clang",
                "default-osx",
                "default-build-dir",
                "build-release",
                "use-vcpkg-triplet-arm64-osx"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "linux-gcc-debug",
            "configurePreset": "linux-gcc-debug"
        },
        {
            "name": "linux-gcc-release",
            "configurePreset": "linux-gcc-release"
        },
        {
            "name": "linux-clang-debug",
            "configurePreset": "linux-clang-debug"
        },
        {
            "name": "linux-clang-release",
            "configurePreset": "linux-clang-release"
        },
        {
            "name": "linux-android-debug",
            "configurePreset": "linux-android-debug"
        },
        {
            "name": "linux-android-release",
            "configurePreset": "linux-android-release"
        },
        {
            "name": "windows-msvc-debug",
            "configurePreset": "windows-msvc-debug"
        },
        {
            "name": "windows-msvc-relwithdebinfo",
            "configurePreset": "windows-msvc-relwithdebinfo"
        },
        {
            "name": "windows-msvc-release",
            "configurePreset": "windows-msvc-release"
        },
        {
            "name": "windows-msvc-android-debug",
            "configurePreset": "windows-msvc-android-debug"
        },
        {
            "name": "windows-msvc-android-relwithdebinfo",
            "configurePreset": "windows-msvc-android-relwithdebinfo"
        },
        {
            "name": "windows-msvc-android-release",
            "configurePreset": "windows-msvc-android-release"
        },
        {
            "name": "osx-debug",
            "configurePreset": "osx-debug"
        },
        {
            "name": "osx-release",
            "configurePreset": "osx-release"
        }
    ]
}