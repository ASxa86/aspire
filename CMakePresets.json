{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_DEBUG_POSTFIX": "d",
                "CMAKE_RELEASE_POSTFIX": "",
                "CMAKE_RELWITHDEBINFO_POSTFIX": "rd",
                "CMAKE_MINSIZEREL_POSTFIX": "s",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
            }
        },
        {
            "name": "gcc",
            "inherits": "default",
            "displayName": "GCC Default",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": "gcc",
            "displayName": "GCC Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "msvc",
            "inherits": "default",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "CMAKE_CXX_FLAGS": "/DWIN32 /D_WINDOWS /EHsc /MP /permissive-"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "msvc-relwithdebinfo",
            "configurePreset": "msvc",
            "configuration": "RelWithDebInfo"
        }
    ]
}